<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>CreateBookClubController</servlet-name>
        <servlet-class>com.bookclubtracker.controllers.CreateBookClubController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateBookClubController</servlet-name>
        <url-pattern>/createBookClub</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.bookclubtracker.controllers.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Validate2FAController</servlet-name>
        <servlet-class>com.bookclubtracker.controllers.Validate2FAController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Validate2FAController</servlet-name>
        <url-pattern>/validate2FA</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.bookclubtracker.servlets.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/protected/*</url-pattern>
    </filter-mapping>
</web-app>
