<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <!-- Login Servlet -->
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.bookclubtracker.controllers.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Validation Servlet -->
    <servlet>
        <servlet-name>Validate2FAController</servlet-name>
        <servlet-class>com.bookclubtracker.controllers.Validate2FAController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Validate2FAController</servlet-name>
        <url-pattern>/validate2FA</url-pattern>
    </servlet-mapping>

    <!-- Authentication Servlet -->
    <servlet>
        <servlet-name>AuthenticationServlet</servlet-name>
        <servlet-class>com.bookclubtracker.servlets.AuthenticationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthenticationServlet</servlet-name>
        <url-pattern>/authentication</url-pattern>
    </servlet-mapping>
    
    <!-- Register Servlet -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.bookclubtracker.servlets.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    
    <!-- Logout Servlet -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.bookclubtracker.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    
    <!-- Profile Servlet -->
    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>com.bookclubtracker.servlets.ProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    
    <!-- Book Clubs Servlet -->
    <servlet>
        <servlet-name>BookClubsServlet</servlet-name>
        <servlet-class>com.bookclubtracker.servlets.BookClubsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookClubsServlet</servlet-name>
        <url-pattern>/bookClubs</url-pattern>
    </servlet-mapping>
    
    <!-- Create Book Club Servlet -->
    <servlet>
        <servlet-name>CreateBookClubServlet</servlet-name>
        <servlet-class>com.bookclubtracker.servlets.CreateBookClubServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateBookClubServlet</servlet-name>
        <url-pattern>/createBookClub</url-pattern>
    </servlet-mapping>
    
    <!-- Join Club Servlet -->
    <servlet>
        <servlet-name>JoinClubServlet</servlet-name>
        <servlet-class>com.bookclubtracker.servlets.JoinClubServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JoinClubServlet</servlet-name>
        <url-pattern>/joinClub</url-pattern>
    </servlet-mapping>
    
    <!-- Meetings Servlet -->
    <servlet>
        <servlet-name>MeetingsServlet</servlet-name>
        <servlet-class>com.bookclubtracker.servlets.MeetingsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MeetingsServlet</servlet-name>
        <url-pattern>/meetings</url-pattern>
    </servlet-mapping>
    
    <!-- Discussions Servlet -->
    <servlet>
        <servlet-name>DiscussionsServlet</servlet-name>
        <servlet-class>com.bookclubtracker.servlets.DiscussionsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DiscussionsServlet</servlet-name>
        <url-pattern>/discussions</url-pattern>
    </servlet-mapping>
    
    <!-- Comments Servlet -->
    <servlet>
        <servlet-name>CommentsServlet</servlet-name>
        <servlet-class>com.bookclubtracker.servlets.CommentsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CommentsServlet</servlet-name>
        <url-pattern>/comments</url-pattern>
    </servlet-mapping>
</web-app>
